<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vlada.europeancapitalsquiz.EndingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_dimen"
                android:scaleType="center"
                android:src="@drawable/winner" />

            <TextView
                android:id="@+id/receiveName"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/win"
                android:layout_marginTop="@dimen/top_dp"
                android:text=""
                android:textColor="@color/text"
                android:textSize="@dimen/text"
                />

            <TextView
                android:id="@+id/ending"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receiveName"
                android:layout_marginTop="@dimen/top_dp"
                android:text=""
                android:textColor="@color/text"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/percent"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/ending"
                android:layout_marginTop="@dimen/top_dp"
                android:text=""
                android:textColor="@color/text"
                android:textSize="@dimen/text" />

        </RelativeLayout>

        <Button
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/top_dp"
            android:onClick="reset"
            android:text="@string/restart"
            android:textSize="@dimen/text"/>

    </LinearLayout>
</ScrollView>
