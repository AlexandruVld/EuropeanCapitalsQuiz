<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#060606</item>
    </style>

    <style name="firstActivityStyle">
        <item name="android:layout_marginTop">@dimen/top_dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="quizLayoutStyle">
        <item name="android:layout_marginLeft">@dimen/left_indent</item>
        <item name="android:layout_marginRight">@dimen/left_indent</item>
        <item name="android:layout_marginTop">@dimen/top_dimen</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="answersStyle">
        <item name="android:paddingLeft">@dimen/left_indent</item>
        <item name="android:paddingRight">@dimen/left_indent</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="radioGroupStyle">
        <item name="android:layout_marginLeft">@dimen/left_indent</item>
        <item name="android:layout_marginRight">@dimen/left_indent</item>
        <item name="android:layout_marginTop">@dimen/top_dimen</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_marginTop">@dimen/top_dimen</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="endingLayout">
        <item name="android:layout_marginTop">@dimen/top_dp</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_marginTop">@dimen/top_dimen</item>
        <item name="android:layout_marginBottom">@dimen/bottom_dp</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

</resources>
